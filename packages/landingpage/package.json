{
    "name": "docker-nextjs-template",
    "version": "1.0.0",
    "description": "Template for a production build of Next.js",
    "license": "MIT",
    "scripts": {
        "dev": "next",
        "build": "next build",
        "start": "next start",
        "type-check": "tsc",
